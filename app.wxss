/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 第一个样式：细线—提取出保存全局样式*/
.bdr{
    position: relative;
}
.bdr::after{
    content: "";
    width: 1 rpx;
    height: 100%;
    position: absolute;
    right:0;
    top:0;
    background-color: #ccc;
}
/*<view class="divider"></view>*/
.divider{
    height:20rpx;
    background: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0,0,0,.1) inset;
}
/*第三个功能  箭头*/
.arrow{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow::after{
    content: "";
    width:15rpx;
    height:15rpx;
    border-top:1px solid #000;
    border-right:1px solid #000;
    transform: rotate(45deg);
}
/*评分小星星

*/
.star-before{
  color:#f19e38;
  position: absolute;
  top:0;
  left:0;
  width: 90%;
  overflow: hidden;
}
.star-after{
  color:#e2e2e2;
}

/*超出部分变成...*/
.ell{
  overflow: hidden;
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*超出部分补充...*/
}

/*加载更多*/
.loadmore {
color: #888;
font-size: 16px;
line-height: 100rpx;
text-align: center;
}

.loadmore.loading::before {
content: '';
width: 40rpx;
height: 40rpx;
margin-top: -10rpx;
margin-right: 10rpx;
display: inline-block;
vertical-align: middle;
animation: loading 1s steps(12) infinite;
background: transparent url(data:image/svg+xml;base64,) no-repeat;
background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}

.cell{
  background-color:#fff;
  font-size:16px;
}
.cell-item{
  border-bottom:1rpx solid #ddd;
  padding:20rpx 30rpx;
}